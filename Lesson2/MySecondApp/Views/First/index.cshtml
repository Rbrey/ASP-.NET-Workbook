@model MySecondApp.Models.MyModel
@{
    Layout = "_Layout";
}

<h2>Hello World!</h2>
<div>
    @if (DateTime.Now.Hour >= 12)
    {
        <p>Good Evening it is @Model.CurrentTime. @Model.mySurname, @Model.myFirstName. Your lucky number is, @Model.luckyNum.</p>
    }
    else
    {
        <p>Good Morning, @Model.mySurname, @Model.myFirstName. Your lucky number is, @Model.luckyNum</p>
    }
</div>
<div style="border: solid 1px black;">
    <p>My name is Robert, I'm new to this and trying to become a better programmer so I can start my own game dev studio. Have a great day!</p>
</div>